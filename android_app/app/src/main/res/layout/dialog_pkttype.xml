<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/settingsInfo"
            android:text="Select the data you want to receive in the broadcast."
            android:textColor="@color/gray18"
            android:textSize="12dp" />


        <LinearLayout
            android:id="@+id/lyVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/chkAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accelerometer Data"

                />

            <CheckBox
                android:id="@+id/chkGyro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gyroscope Data" />

            <CheckBox
                android:id="@+id/chkMag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Magnetometer Data" />

            <CheckBox
                android:id="@+id/chkOrie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orientation Data" />

            <CheckBox
                android:id="@+id/chkBatt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery Voltage" />

            <CheckBox
                android:id="@+id/chkRaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raw Data" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPktTypeOk"
                    style="@style/DialogButton"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"

                    android:text="OK" />

                <Button
                    android:id="@+id/btnPktTypeCancel"
                    style="@style/DialogButton"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"

                    android:text="Cancel" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>