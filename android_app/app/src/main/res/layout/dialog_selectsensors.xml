<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewMainNewExp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/DialogWhite"

        android:orientation="horizontal">
        >

        <TextView
            android:id="@+id/tvCollectWalkId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Select Sensors:"
            android:textColor="@color/black" />


        <LinearLayout
            android:id="@+id/lySensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCollectWalkId"
            android:clipToPadding="false"

            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ListView
                    android:id="@+id/listAllSensors"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </ListView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnOkSelectSensors"
                        style="@style/DialogButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/DialogWhite"
                        android:padding="5dp"
                        android:text="OK" />


                    <Button
                        android:id="@+id/btnCancelSelectSensors"
                        style="@style/DialogButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_white"
                        android:padding="5dp"
                        android:text="Cancel"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>